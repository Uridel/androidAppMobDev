<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevin.androidapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_got"
        android:label="Tv-Shows"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="My shows"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".EditShowActivity"
            android:label="Edit the show "
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".CreateShowActivity"
            android:label="Add shows"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeScreen"
            android:label="Series"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
